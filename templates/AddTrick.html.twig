{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Tricks{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            {% set flashbag_notices = app.session.flashbag.get('form_notice') %}
            {% if flashbag_notices is not empty %}
            <ul class="msg">
                {% for notice in flashbag_notices %}
                    <li>{{ notice }}</li>
                {% endfor %}
            {% endif %}
            </ul>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_row(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name)}}
            {{ form_row(form.description) }}
            {{ form_row(form.grp) }}
            {{ form_row(form.image) }}
            <a href="#" id="add_image" class="btn btn-default">Ajouter une image</a><br />
            {{ form_row(form.video) }}
            <a href="#" id="add_video" class="btn btn-default">Ajouter une vid√©o</a><br />
                <button type="submit">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
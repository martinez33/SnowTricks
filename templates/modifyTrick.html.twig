{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Tricks{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">

            <div class="form-group">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.grp) }}


                {% form_theme form 'form/imageField.html.twig' %}

                <div id="images" data-prototype="{{ form_widget(form.image.vars['prototype'])|e("html_attr") }}" data-index="{{ form.image|length }}">
                {{ form_row(form.image) }}

                </div>
                <a href="#" id="add_image"
                   class="collection-add btn btn-default nobuttons_values-collection-add nobuttons_values-collection-action"
                   title="Add element"><span class="glyphicon glyphicon-plus-sign"></span></a>

                {#<a href="#" id="add_image" class="glyphicon glyphicon-plus-sign"></a><br />#}
                
                {% form_theme form 'form/videoField.html.twig' %}

                <div id="videos" data-prototype="{{ form_widget(form.video.vars['prototype'])|e("html_attr") }}" data-index="{{ form.video|length }}">
                {{ form_row(form.video) }}
                </div>
                <a href="#" id="add_video"
                   class="collection-add btn btn-default nobuttons_values-collection-add nobuttons_values-collection-action"
                   title="Add element"><span class="glyphicon glyphicon-plus-sign"></span></a>
                {#<a href="#" id="add_video" class="btn btn-default">Ajouter une vid√©o</a><br />#}

                <br/>
                <br/>
                <button type="submit">Envoyer</button>

            {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}

{% block javascript %}
{{ parent() }}
    <script type="text/javascript" src="{{ asset('build/js/modif.js') }}"></script>
{% endblock %}

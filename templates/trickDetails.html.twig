
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Tricks{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="row">
                <div class="col-md-2">

                    <h2>{{ trick.name }}</h2>
                    <h4>{{ trick.description }}</h4>
                    <h5>{{ trick.grp }}</h5>
                    <br>
                </div>
            </div>
         {% for image in trick.image %}
                <a class="">
                    <img src="{{ asset(image.fileName) }}" class="img-thumbnail" />
                </a>
         {% endfor %}
        </div>

            {% for video in trick.video %}
                {% if video.vidType == "Youtube" %}
                    {##}<iframe width="560" height="315" src="{{ 'https://www.youtube.com/embed/' ~ video.vidId }}"
                            frameborder="0" allow="autoplay; encrypted-media; picture-in-picture; gyroscope; accelerometer"  allowfullscreen ></iframe>
                {% elseif video.vidType == "Dailymotion" %}
                    <iframe width="200" height="150" src="//www.dailymotion.com/embed/video{{ asset(video.vidId) }}"
                            frameborder="0" allow="encrypted-media" allowfullscreen ></iframe>
                {% elseif video.vidType == "Vimeo" %}
                    <iframe src="https://player.vimeo.com/video/{{ asset(video.vidId) }}"
                           width="200" height="150" frameborder="0"
                            webkitallowfullscreen mozallowfullscreen allowfullscreen ></iframe>
                {% endif %}
            {% endfor %}
        </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Tricks{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">

         {% for image in trick.image %}
                <a class="">
                    <img src="{{ asset(image.fileName) }}" class="img-thumbnail" />
                </a>
         {% endfor %}
        </div>
        <div>

            {% for video in trick.video %}
                {% if video.vidType == "Youtube" %}
                    <embed width="200" height="150" src="https://www.youtube.com/embed/{{ asset(video.vidId) }}"
                           frameborder="0" allow="encrypted-media" allowfullscreen />
                {% elseif video.vidType == "Dailymotion" %}
                    <embed width="200" height="150" src="//www.dailymotion.com/embed/video{{ asset(video.vidId) }}"
                           frameborder="0" allow="encrypted-media" allowfullscreen />
                {% elseif video.vidType == "Vimeo" %}
                    <embed src="https://player.vimeo.com/video/{{ asset(video.vidId) }}"
                           width="200" height="150" frameborder="0"
                           webkitallowfullscreen mozallowfullscreen allowfullscreen />
                {% endif %}
            {% endfor %}
        </div>
        <div class="row">
                <div class="col-md-2">

                    <h2>{{ trick.name }}</h2>
                    <h4>{{ trick.description }}</h4>
                    <h5>{{ trick.grp }}</h5>
                    <br>
                </div>
        </div>
    </div>
{% endblock %}
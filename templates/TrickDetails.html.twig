
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Tricks{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            {% for trick in tricks %}
                <div class="col-md-2">

                    <a class="">
                        <img src="{{ asset(trick.fileName ~ trick.ext) }}" class="img-thumbnail" />
                    </a>
                    <h2>{{ trick.name }}</h2>
                    <h4>{{ trick.description }}</h4>
                    <h5>{{ trick.grp }}</h5>
                    <br>
                    <p>{{ trick.content }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}